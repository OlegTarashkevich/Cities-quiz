<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:enterFadeDuration="@android:integer/config_shortAnimTime"
          android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <item android:state_focused="true">
        <inset android:insetBottom="@dimen/button_margin"
               android:insetLeft="@dimen/button_margin"
               android:insetRight="@dimen/button_margin"
               android:insetTop="@dimen/button_margin">
            <shape>
                <solid android:color="@color/green_dark"/>
                <corners android:radius="@dimen/button_radius"/>
                <padding android:bottom="@dimen/button_padding"
                         android:left="@dimen/button_padding"
                         android:right="@dimen/button_padding"
                         android:top="@dimen/button_padding"/>
            </shape>
        </inset>
    </item>

    <item android:state_enabled="false">
        <inset android:insetBottom="@dimen/button_margin"
               android:insetLeft="@dimen/button_margin"
               android:insetRight="@dimen/button_margin"
               android:insetTop="@dimen/button_margin">
            <shape>
                <solid android:color="@color/primary_disabled"/>
                <corners android:radius="@dimen/button_radius"/>
                <padding android:bottom="@dimen/button_padding"
                         android:left="@dimen/button_padding"
                         android:right="@dimen/button_padding"
                         android:top="@dimen/button_padding"/>
            </shape>
        </inset>
    </item>

    <item android:state_pressed="true">
        <inset android:insetBottom="@dimen/button_margin"
               android:insetLeft="@dimen/button_margin"
               android:insetRight="@dimen/button_margin"
               android:insetTop="@dimen/button_margin">
            <shape>
                <solid android:color="@color/green_light"/>
                <corners android:radius="@dimen/button_radius"/>
                <padding android:bottom="@dimen/button_padding"
                         android:left="@dimen/button_padding"
                         android:right="@dimen/button_padding"
                         android:top="@dimen/button_padding"/>
            </shape>
        </inset>
    </item>

    <item>
        <inset android:insetBottom="@dimen/button_margin"
               android:insetLeft="@dimen/button_margin"
               android:insetRight="@dimen/button_margin"
               android:insetTop="@dimen/button_margin">
            <shape>
                <solid android:color="@color/green_dark"/>
                <corners android:radius="@dimen/button_radius"/>
                <padding android:bottom="@dimen/button_padding"
                         android:left="@dimen/button_padding"
                         android:right="@dimen/button_padding"
                         android:top="@dimen/button_padding"/>
            </shape>
        </inset>
    </item>

</selector>
